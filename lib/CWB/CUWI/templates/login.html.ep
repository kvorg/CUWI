% layout 'main', title=>l('Login');
  <div class="form">
    <%= form_for $self->req->url => ( method => "post") => begin %>
       l(Username): <%= text_field 'username', size=>10 %>
       l(Password): <%= password_field 'password', size=>20 %>
      <%= submit_button l('Login') %>
    <% end %>
  </div>

% if (stash('error')) {
  <div class="exception">
%=   stash('error')
  </div>
% }

